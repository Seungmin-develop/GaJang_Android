<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.gajang.view.LoginFragment"
    android:id="@+id/loginFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gajang_logo_image_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:src="@drawable/login_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/google_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:background="@drawable/button_shape_google"
            android:drawableLeft="@drawable/button_image_property_google"
            android:gravity="center"
            android:text="Google 로그인"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/gajang_logo_image_view"
            app:layout_constraintBottom_toTopOf="@+id/facebook_login_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/facebook_login_button"
            android:layout_marginHorizontal="17dp"
            android:text="FACEBOOK 로그인"
            android:background="@drawable/button_shape_facebook"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/button_image_property_facebook"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/google_login_button"
            app:layout_constraintLeft_toLeftOf="@+id/google_login_button"
            app:layout_constraintRight_toRightOf="@+id/google_login_button"
            android:layout_marginTop="17dp"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>