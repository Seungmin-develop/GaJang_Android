<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/facebook_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/change_living_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/change_living_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        />

    <TextView
        android:id="@+id/change_living_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="고객님의 현재 거주지는 송파구입니다."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <Spinner
        android:id="@+id/change_living_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/change_living_btn"
        app:layout_constraintBottom_toBottomOf="@+id/change_living_btn"
        app:layout_constraintLeft_toRightOf="@+id/change_living_btn"
        app:layout_constraintRight_toRightOf="@+id/change_living_text"
        android:spinnerMode="dropdown"
        android:entries="@array/living_array"
        android:background="@drawable/spinner_shape"/>

    <Button
        android:id="@+id/change_living_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/change_living_text"
        app:layout_constraintLeft_toLeftOf="@+id/change_living_text"
        app:layout_constraintRight_toLeftOf="@+id/change_living_spinner"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="13dp"
        android:text="거주지 변경하기"
        android:textColor="@color/white"
        android:background="@color/com_facebook_blue"/>





</androidx.constraintlayout.widget.ConstraintLayout>